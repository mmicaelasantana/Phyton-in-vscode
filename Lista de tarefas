                visualizar_tarefas()
            elif opcao == 3:
                print('Remover tarefa')
            elif opcao == 4:
                print('Sair')
                break
            else: 
                print('OpÃ§Ã£o invalida')  
        except:
            print('Digite uma opÃ§Ã£o valida!')
         
